<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            style="@style/headerActivity"
            android:text="details" />

        <TextView
            style="@style/header"
            android:text="Title" />

        <TextView
            android:id="@+id/title"
            style="@style/content" />

        <TextView
            style="@style/header"
            android:text="Author" />

        <TextView
            android:id="@+id/author"
            style="@style/content" />

        <TextView
            style="@style/header"
            android:text="When" />

        <TextView
            android:id="@+id/when"
            style="@style/content" />

        <TextView
            style="@style/header"
            android:text="Where" />

        <TextView
            android:id="@+id/where"
            style="@style/content" />

        <TextView
            style="@style/header"
            android:text="Theme" />

        <TextView
            android:id="@+id/theme"
            style="@style/content" />

        <TextView
            style="@style/headerActivity"
            android:text="comments" />

        <ListView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

</ScrollView>